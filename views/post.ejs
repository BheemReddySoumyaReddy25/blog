<%- include("partials/header"); -%>
<div class="container" style="margin-top: 5%;">
    <div class="text-center">
        <img src="data:image/<%=image.img.contentType%>;base64,<%=image.img.data.toString('base64')%>">
    </div>

    <h1 style="display: inline-block" ><%=image.name %>  </h2> 
    <a href = "/delete/<%=image._id%>">
        <i class="fa fa-trash fa-2x"  aria-hidden="true" style="float:right;color: rgb(165, 2, 2);padding-left: 5px; "></i>
    </a>
    <a href = "/update/<%=image._id%>">
        <i class="fa fa-pencil fa-2x"  aria-hidden="true" style="float:right;color: black;"></i>
    </a>   
    <br>
    <em style="text-align: center;"><%= image.location %></em>
    <br>
    <br>
    <p><%= image.content%></p>
</div>

<%- include("partials/footer"); -%>